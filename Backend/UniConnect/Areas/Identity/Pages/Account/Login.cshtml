@page
@model LoginModel

@* @{ *@
@*     ViewData["Title"] = "Log in"; *@
@* } *@

<h1>@ViewData["Title"]</h1>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign in Page</title>
    <link rel="stylesheet" href="~/css/LoginStyles.css"/>
    <!-- <script src="login.js"></script> -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Protest+Guerrilla&display=swap" rel="stylesheet">
    <style>
        .protest-guerrilla-regular {
            font-family: "Protest Guerrilla", serif;
            font-weight: 400;
            font-style: normal;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            background-color: #ffffff;
        }

        .container {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .form-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .form-section h1 {
            font-size: 2.5rem;
            color: #000000;
            font-family: "Protest Guerrilla", serif;
        }

        .inline-logo {
            vertical-align: middle;
            height: 1.5em;
        }

        .form-section p {
            margin-top: -10px;
            font-size: 1.2rem;
            color: #555;
        }

        .form-section form {
            width: 100%;
            max-width: 400px;
            margin-top: 2rem;

        }

        .form-group {
            margin-bottom: 1.5rem;
            width: 95%;
        }

        .form-group label {
            display: block;
            font-size: 1rem;
            margin-bottom: 0.5rem;
            color: #555;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #555;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .password-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .password-container .forgot-password {
            font-size: .9rem;
            color: #ed0004;
            text-decoration: none;
        }

        .password-container .forgot-password:hover {
            text-decoration: underline;
        }

        .button-container {
            display: flex;
            justify-content: center;
        }

        form{
            width: 100%;
        }

        .login-button {
            width: 120px;
            background-color: #ed0004;
            color: #ffffff;
            padding: 8px;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            cursor: pointer;
        }

        .login-button:hover {
            background-color: #ed0004;
        }

        .social-login {
            width: 100%;
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 1rem;
        }

        .social-login button {
            padding: 5px 15px;
            border: 1px solid #555;
            border-radius: 5px;
            background-color: #fff;
            cursor: pointer;
            height: auto;
        }

        .social-login button img {
            width: 25px;
            height: 25px;
            margin: 0 auto;
            display: block;

        }

        .signup {
            text-align: center;
            margin-top: 1rem;
        }

        .signup p{
            font-size: 1.2rem;
            color: #666;
        }

        .signup a {
            color: #ed0004;
            text-decoration: none;
        }


        .signup a:hover {
            text-decoration: underline;
        }

        .illustration-section {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items:flex-end;
            background-image: linear-gradient(to right,#ed0004, #680002);
            border-radius: 10px;
            position: relative;

        }

        .illustration-section img {

            max-width: 100%;
            height: auto;
            position: relative;
            z-index: 2;
        }

        .illustration-section img:nth-of-type(2) {
            width: 150px;
            position: absolute;
            z-index: 1;
            top: 25%;
            right: 5%;

        }

        .down{
            margin-top: 20px;
        }


    </style>
</head>

<body>

    <div class="container">
        <div class="form-section">
            <section>
                <h1>
                    <img src="~/img/E-JUST_logo.png" alt="logo" class="inline-logo"> UniConnect </h1>

                <p>Welcome back!! login now</p>
                <form id="account" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                            
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"/>

                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="button-container">
                        <button id = "login-submit" type="submit" class="login-button">LOGIN</button>
                    </div>
                    <div class="down">
                        @* <p> *@
                        @*     <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a> *@
                        @* </p> *@
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        @* <p> *@
                        @*     <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> *@
                        @* </p> *@
                    </div>
                </form>
            </section>
        </div>
            
        <div class="illustration-section">
            <img src="~/img/illustration.png" alt="Illustration">
            <img src="~/img/cactus.svg" alt="Illustration 2" class="cactus-image">
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>